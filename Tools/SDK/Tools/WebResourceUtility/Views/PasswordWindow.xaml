<Window x:Class="Microsoft.Crm.Sdk.Samples.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="140" Width="200"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Password?" Width="100" Margin="2"/>
            <PasswordBox x:Name="PasswordText" Margin="2" />
            <Button x:Name="SubmitButton" Content="Submit" Margin="2" Click="SubmitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
